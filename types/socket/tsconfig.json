{
  "include": ["**/*.ts", "module.d.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "importsNotUsedAsValues": "remove",
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": true
  }
}
